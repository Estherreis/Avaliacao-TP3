@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow p-4">
                <h1 class="text-center mb-4">@ViewData["Title"]</h1>
                <p class="text-center">Digite seu email para redefinir sua senha.</p>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Campo Email -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control border-0 shadow-sm" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Botão Redefinir Senha -->
                    <button type="submit" class="btn btn-primary w-100 btn-lg shadow-sm">Redefinir Senha</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
