@page
@model LogoutModel
@{
    ViewData["Title"] = "Sair";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow p-4 text-center">
                <h1 class="mb-4">@ViewData["Title"]</h1>
                @{
                    if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm">Clique aqui para sair</button>
                        </form>
                    }
                    else
                    {
                        <p class="text-success">Você saiu da aplicação com sucesso.</p>
                    }
                }
            </div>
        </div>
    </div>
</div>
