@page
@model AvaliacaoA1.Pages.Tarefas.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Detalhes da Tarefa</h1>

    <div class="card shadow p-4 text-center">
        <h4 class="font-weight-bold text-primary mb-3">Tarefa</h4>
        <dl class="row justify-content-center">
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.Tarefa.Nome) </dd>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.Tarefa.Descricao) </dd>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.Tarefa.DataCriacao) </dd>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.Tarefa.DataConclusao) </dd>
            <dd class="col-sm-9">
                @(Model.Tarefa.Concluida ? "Concluída" : "Não Concluída")
            </dd>
        </dl>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-page="./Index" class="btn btn-outline-secondary btn-lg shadow-sm">Voltar à Lista</a>
    </div>
</div>
