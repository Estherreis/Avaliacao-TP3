@page
@model AvaliacaoA1.Pages.Reuniao.IndexModel

@{
    ViewData["Title"] = "Lista de Reuniões";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">Lista de Reuniões</h1>
        <a asp-page="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-plus"></i> <!-- Ícone de adição --><a href="c:\users\lucas\source\repos\avaliacaoa1\avaliacaoa1\pages\reuniao\index.cshtml">c:\users\lucas\source\repos\avaliacaoa1\avaliacaoa1\pages\reuniao\index.cshtml</a>
            <a href="c:\users\lucas\source\repos\avaliacaoa1\avaliacaoa1\pages\reuniao\index.cshtml.cs">c:\users\lucas\source\repos\avaliacaoa1\avaliacaoa1\pages\reuniao\index.cshtml.cs</a>
        </a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Reuniao[0].DataHora)</th>
                <th>@Html.DisplayNameFor(model => model.Reuniao[0].Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.Reuniao[0].Notas)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Reuniao)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DataHora)</td>
                    <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Notas)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="text-primary me-2" title="Editar">
                            <i class="fas fa-pencil-alt"></i> <!-- Ícone de edição -->
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="text-secondary me-2" title="Detalhes">
                            <i class="fas fa-eye"></i> <!-- Ícone de detalhes -->
                        </a>
                        <a href="javascript:void(0);" class="text-danger" title="Excluir" onclick="openDeleteModal('/Reuniao/Delete?id=@item.Id')">
                            <i class="fas fa-trash-alt"></i> <!-- Ícone de exclusão -->
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <!-- Link do Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
}

<style>
    a {
        text-decoration: none; /* Remove o sublinhado dos links */
    }

    a:hover {
        text-decoration: none; /* Remove o sublinhado ao passar o mouse */
    }
</style>