@page
@model AvaliacaoA1.Pages.Recompensa.CreateModel

@{
    ViewData["Title"] = "Criar Recompensa";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Criar Recompensa</h1>

    <div class="card shadow p-4">
        <h4 class="font-weight-bold text-primary mb-3">Detalhes da Recompensa</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Campo Nome -->
            <div class="form-floating mb-3">
                <input asp-for="Recompensa.Nome" class="form-control border-0 shadow-sm" placeholder="Nome" />
                <label asp-for="Recompensa.Nome" class="form-label font-weight-bold">Nome</label>
                <span asp-validation-for="Recompensa.Nome" class="text-danger"></span>
            </div>

            <!-- Campo Descrição -->
            <div class="form-floating mb-3">
                <input asp-for="Recompensa.Descricao" class="form-control border-0 shadow-sm" placeholder="Descrição" />
                <label asp-for="Recompensa.Descricao" class="form-label font-weight-bold">Descrição</label>
                <span asp-validation-for="Recompensa.Descricao" class="text-danger"></span>
            </div>

            <!-- Campo Custo em Pontos -->
            <div class="form-floating mb-3">
                <input asp-for="Recompensa.CustoEmPontos" class="form-control border-0 shadow-sm" placeholder="Custo em Pontos" />
                <label asp-for="Recompensa.CustoEmPontos" class="form-label font-weight-bold">Custo em Pontos</label>
                <span asp-validation-for="Recompensa.CustoEmPontos" class="text-danger"></span>
            </div>

            <!-- Botões de Ação -->
            <div class="d-flex justify-content-end">
                <a asp-page="./Index" class="btn btn-outline-secondary btn-lg shadow-sm me-3">Voltar à Lista</a>
                <input type="submit" value="Criar" class="btn btn-primary btn-lg shadow-sm" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
